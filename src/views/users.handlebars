<div class="webcontainer">
  <h1>Gesti√≥n de Usuarios</h1>

  <table>
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Email</th>
        <th>Rol</th>
        <th>Acciones</th>
      </tr>
    </thead>
    <tbody>
      {{#each users}}
        <tr>
          <td>{{this.first_name}} {{this.last_name}}</td>
          <td>{{this.email}}</td>
          <td>{{this.role}}</td>
          <td>
            <form action="/api/users/{{this._id}}/role" method="POST">
              <select name="role" required>
                <option value="user" {{#if this.isUser "user"}}selected{{/if}}>User</option>
                <option value="premium" {{#if this.isPremium "premium"}}selected{{/if}}>Premium</option>
                <option value="admin" {{#if this.isAdmin "admin"}}selected{{/if}}>Admin</option>
              </select>
              <button type="submit">Actualizar Rol</button>
            </form>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>
